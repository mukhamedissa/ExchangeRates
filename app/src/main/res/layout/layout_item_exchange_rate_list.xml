<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/layout_item_exchange_rate_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        style="@style/TextAppearance.AppCompat.Title"
        tools:text="Name" />

    <TextView
        android:id="@+id/layout_item_exchange_rate_list_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layout_item_exchange_rate_list_name"
        android:layout_alignStart="@+id/layout_item_exchange_rate_list_name"
        android:layout_below="@+id/layout_item_exchange_rate_list_name"
        android:layout_marginTop="18dp"
        tools:text="Rate" />

    <TextView
        android:id="@+id/layout_item_exchange_rate_list_ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_item_exchange_rate_list_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        tools:text="Ask" />

    <TextView
        android:id="@+id/layout_item_exchange_rate_list_bid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_item_exchange_rate_list_rate"
        android:layout_alignLeft="@+id/layout_item_exchange_rate_list_ask"
        android:layout_alignStart="@+id/layout_item_exchange_rate_list_ask"
        tools:text="Bid" />

    <TextView
        android:id="@+id/layout_item_exchange_rate_list_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layout_item_exchange_rate_list_rate"
        android:layout_alignStart="@+id/layout_item_exchange_rate_list_rate"
        android:layout_below="@+id/layout_item_exchange_rate_list_rate"
        android:layout_marginTop="24dp"
        tools:text="Date time" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_color"
        android:layout_below="@id/layout_item_exchange_rate_list_datetime"
        android:layout_marginTop="24dp"/>


</RelativeLayout>